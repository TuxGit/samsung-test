
.search_form

  &__input
    margin-right: 7px
    width: 277px
    height: 22px
    padding-left: 30px
    border: 1px solid #d5d5d5
    background: url('../img/icons/search.png') 12px 6px no-repeat

  &__btn
    background-color: #17709a
    color: #fff
    font-size: 12px
    text-transform: uppercase
    padding: 8px 14px
    border-radius: 4px
    text-decoration: none

    &:visited
      color: #fff
    &:hover
      color: #d9e8ef
